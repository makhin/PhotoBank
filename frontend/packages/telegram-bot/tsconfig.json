{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "rootDir": ".",
    "outDir": "dist",
    "composite": true,
    "noEmit": true,
    "moduleDetection": "force",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "references": [
    {
      "path": "../shared"
    }
  ],
  "include": ["src"]
}
