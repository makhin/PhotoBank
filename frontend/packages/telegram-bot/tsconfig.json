{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "rootDir": "src",
    "outDir": "dist",
    "composite": true,
    "declaration": true,
    "noEmit": false,
    "moduleDetection": "force",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@photobank/shared": ["../shared/src/index.ts"],
      "@photobank/shared/*": ["../shared/src/*"]
    }
  },
  "references": [{ "path": "../shared" }],
  "include": ["src"]
}
