{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@photobank/shared/*": ["../shared/src/*"]
    },
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "types": ["vitest/globals"],
    "strict": false
  },
  "references": [{ "path": "../shared" }],
  "include": ["src"],
  "exclude": [
    "src/**/*.msw.ts",
    "src/**/__mocks__/**",
    "src/**/*.mock.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts"
  ]
}
