{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@photobank/shared/*": ["../shared/src/*"],
      "@photobank/shared/api/photobank": ["../shared/src/api/photobank/index.ts"]
    },
  },
  "references": [{ "path": "../shared" }],
  "include": ["src"],
  "exclude": [
    "src/**/*.msw.ts",
    "src/**/__mocks__/**",
    "src/**/*.mock.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts"
  ]
}
