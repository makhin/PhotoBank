{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "declaration": true,
    "emitDeclarationOnly": false
  },
  "include": [
    "src/**/*",
    "src/api/photobank/auth/**/*.ts",
    "src/api/photobank/faces/**/*.ts",
    "src/api/photobank/paths/**/*.ts",
    "src/api/photobank/persons/**/*.ts",
    "src/api/photobank/photos/**/*.ts",
    "src/api/photobank/storages/**/*.ts",
    "src/api/photobank/tags/**/*.ts",
    "src/api/photobank/users/**/*.ts",
    "src/api/photobank/photoBankApi.schemas"
  ],
  "exclude": [
    "src/api/photobank/msw.ts",
    "src/api/photobank/msw.scenarios.ts",
    "src/**/*.msw.ts"
  ]
}

