{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023", "DOM"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "verbatimModuleSyntax": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "checkJs": false,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "useUnknownInCatchVariables": true,
    "esModuleInterop": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "exactOptionalPropertyTypes": true,
    "inlineSources": false,
    "sourceMap": true,
    "types": [],
    "baseUrl": ".",
    "paths": {
      "@photobank/shared/*": ["frontend/packages/shared/src/*"],
      "@photobank/shared": ["frontend/packages/shared/src/index.ts"]
    }
  }
}
