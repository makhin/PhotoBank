# Connection string to external MS SQL
DB_CONNECTION="Server=server;Database=Photobank;User Id=user;Password=pass;Encrypt=False;"

# MinIO Object Storage settings
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS=minioadmin
MINIO_SECRET=minioadmin

# Telegram bot credentials
BOT_TOKEN=your_token
VITE_BOT_TOKEN=your_token
API_EMAIL=admin@example.com
VITE_API_EMAIL=admin@example.com
API_PASSWORD=secret
VITE_API_PASSWORD=secret

# API endpoint configuration
# VITE_API_BASE_URL - Used by frontend (browser), uses relative path for multi-domain support
#   - Relative path (/api) works with both external and local domains through Nginx
#   - Browser automatically resolves to current domain (makhin.ddns.net or raspberrypi.local)
VITE_API_BASE_URL=/api

# API_BASE_URL - Used by telegram bot (Node.js backend)
#   - Local development: http://localhost:5066
#   - Docker Compose: http://api:5066 (bot uses docker network)
#   - Production: http://api:5066 or https://api.yourdomain.com
API_BASE_URL=http://localhost:5066

# Service key for bot authentication
BOT_SERVICE_KEY=your-super-secret-service-key

# Image URL configuration
VITE_IMAGE_BASE_URL=http://localhost
IMAGE_BASE_URL=http://localhost

# Azure OpenAI settings
VITE_AZURE_OPENAI_API_VERSION=2024-02-15-preview
VITE_AZURE_OPENAI_ENDPOINT=https://example.openai.azure.com
VITE_AZURE_OPENAI_KEY=your_key
VITE_AZURE_OPENAI_DEPLOYMENT=gpt-4

# Application version
APP_VERSION=1.0.0
VITE_APP_VERSION=1.0.0
